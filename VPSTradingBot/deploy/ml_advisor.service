[Unit]
Description=Trading ML Advisor Service
After=network.target

[Service]
# Zmień 'User' na użytkownika VPS (np. ubuntu, root)
User=ubuntu
# Zmień 'WorkingDirectory' na ścieżkę do projektu
WorkingDirectory=/home/ubuntu/VPSTradingBot
# Uruchomienie serwera ML (FastAPI/Uvicorn)
ExecStart=/home/ubuntu/VPSTradingBot/.venv/bin/python -m uvicorn ml.server:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=5
Environment=PYTHONUNBUFFERED=1

[Install]
WantedBy=multi-user.target
