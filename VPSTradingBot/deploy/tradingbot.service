[Unit]
Description=VPS Trading Bot Service
After=network.target

[Service]
# Zmień 'User' na użytkownika VPS (np. ubuntu, root)
User=ubuntu
# Zmień 'WorkingDirectory' na ścieżkę do projektu
WorkingDirectory=/home/ubuntu/VPSTradingBot
# Zmień ścieżkę do pythona w venv
ExecStart=/home/ubuntu/VPSTradingBot/.venv/bin/python -m app.main
Restart=always
RestartSec=5
Environment=PYTHONUNBUFFERED=1

[Install]
WantedBy=multi-user.target
